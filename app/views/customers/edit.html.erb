<div class="form-header">
  <h1>Customer</h1>
</div>
<div class="form">
  <%= simple_form_for @customer do |f| %>
    <div class="form">
      <%= f.input :name, input_html: { autocomplete: "off" } %>
    </div>
    <div class="form">
      <%= f.input :cpf, input_html: { autocomplete: "off", data: { mask: :cpf } } %>
    </div>

    <%= f.submit "Save", class: "button" %>
  <% end %>
</div>