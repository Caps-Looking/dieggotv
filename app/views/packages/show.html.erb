<div class="show-header">
  <h1>Package</h1>
</div>
<div class="show">
  <div class="info">
    <div>
      <label> Id: </label>
      <%= @package.id %> <%= link_to fa_icon("edit"), edit_package_path(@package), id: 'edit' %>
    </div>
    <div>
      <label> Name: </label>
      <%= @package.name %>
    </div>
    <div>
      <label> Price: </label>
      $<%= @package.price %>
    </div>
  </div>
</div>