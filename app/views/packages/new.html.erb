<div class="form-header">
  <h1>Package</h1>
</div>
<div class="form">
  <%= simple_form_for @package do |f| %>
    <div class="form">
      <%= f.input :name, input_html: { autocomplete: "off" } %>
    </div>
    <div class="form">
      <%= f.input :price, input_html: { min: "0", autocomplete: "off" } %>
    </div>

    <%= f.submit "Save", class: "button" %>
  <% end %>
</div>